
-content_for :subtabs do
  .navtitle
    = t(".title")

-form_tag "/questions/tags", :class => "form", :id => "filter_tags", :method => "get" do
  = label_tag :q, t(".filter"), :class => "label"
  = text_field_tag "q", params[:q], :class => "text_field filter_field"
  = submit_tag("filter")

#tag_table
  = render(:partial => "tag_table", :locals => {:tag_table => @tags})

-content_for :sidebar do
  -if logged_in? && current_user.mod_of?(current_group)
    = link_to t("scaffold.new", :model =>"tag"), new_tag_url
