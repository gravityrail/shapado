= hidden_field_tag "source", source, :id => "source_#{commentable.id}"

-opts = {:class => "text_area", :rows => 'auto', :cols => 'auto'}
-if local_assigns[:markdown]
  -if current_group.wysiwyg_editor
    -opts[:id] = "wysiwyg_editor"
    -opts[:value] = markdown(@comment.body)
  -else
    -opts[:id] = "markdown_editor"

= f.text_area :body, opts

-if local_assigns[:markdown] && !current_group.wysiwyg_editor
  =markdown(@comment.body)

-elsif !logged_in?
  = render :partial => "users/anonymous_form"

#markdown_preview.markdown.reply_to
  =markdown(commentable.body)
